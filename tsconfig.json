{
  "version": "2.1.5",
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es6", "ES2015"],
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}